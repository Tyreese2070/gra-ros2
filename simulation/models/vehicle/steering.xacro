<?xml version="1.0"?>
<sdf version='1.7' xmlns:xacro="http://www.ros.org/wiki/xacro" name="vehicle_steering">

    <!-- Steering Macro -->
    <xacro:macro name='steering' params='name parent limit x y z roll pitch yaw'>
    <link name='${name}_link'>
            <pose relative_to='${name}_joint'>0 0 0 0 0 0</pose>
            <inertial>
                <pose>0 0 0 0 0 0</pose>
                <mass>0.001</mass>
                <inertia>
                    <ixx>0.001</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.001</iyy>
                    <iyz>0</iyz>
                    <izz>0.001</izz>
                </inertia>
            </inertial>
            <visual name='${name}_link_visual'>
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.03</radius>
                        <length>0.1</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>

        <joint name='${name}_joint' type='revolute'>
            <pose relative_to='${parent}'>${x} ${y} ${z} ${roll} ${pitch} ${yaw}</pose>
            <parent>${parent}</parent>
            <child>${name}_link</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <lower>-${limit}</lower>
                    <upper>${limit}</upper>
                    <velocity>10000</velocity>
                    <effort>10000</effort>
                </limit>
                <dynamics>
                    <spring_reference>0</spring_reference>
                    <spring_stiffness>0</spring_stiffness>
                </dynamics>
            </axis>
        </joint>
    </xacro:macro>

</sdf>