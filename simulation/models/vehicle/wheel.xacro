<?xml version="1.0"?>
<sdf version='1.7' xmlns:xacro="http://www.ros.org/wiki/xacro" name="vehicle_wheels">

    <!-- Wheel Macro -->
    <xacro:macro name='wheel' params='name parent x y z roll pitch yaw'>
        <link name='${name}'>
            <pose relative_to='${name}_joint'>0 0 0 0 0 0</pose>
            <inertial>
                <pose>0 0 0 0 0 0</pose>
                <mass>5.5</mass>
                <inertia>
                    <ixx>0.11207078795000001</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.11207078795000001</iyy>
                    <iyz>0</iyz>
                    <izz>0.1887470134</izz>
                </inertia>
            </inertial>
            <collision name='${name}_collision'>
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.2575</radius>
                        <length>0.1965</length>
                    </cylinder>
                </geometry>
            </collision>
            <visual name='${name}_visual'>
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.2575</radius>
                        <length>0.1965</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0 0 0 1</ambient>
                    <diffuse>0 0 0 1</diffuse>
                </material>
            </visual>
        </link>
        <joint name='${name}_joint' type='revolute'>
            <pose relative_to='${parent}'>${x} ${y} ${z} ${roll} ${pitch} ${yaw}</pose>
            <parent>${parent}</parent>
            <child>${name}</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>
                    <upper>1.79769e+308</upper>
                    <velocity>10000</velocity>
                    <effort>10000</effort>
                </limit>
                <dynamics>
                    <spring_reference>0</spring_reference>
                    <spring_stiffness>0</spring_stiffness>
                </dynamics>
            </axis>
        </joint>
    
    </xacro:macro>

</sdf>
